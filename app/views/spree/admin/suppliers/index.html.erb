<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:suppliers) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_supplier), new_object_url, :icon => 'icon-plus' %>
  </li>
<% end %>

<% unless @suppliers.any? %>
  <div class="no-objects-found">
    <%= t(:no_results) %>
  </div>
<% else %>
  <table class="index">
    <colgroup>
      <col style="width: 30%">
      <col style="width: 58%">
      <col style="width: 12%">
    </colgroup>
    <thead>
      <tr data-hook="rate_header">
        <th><%= t(:name) %></th>
        <th><%= t(:details) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier|%>
      <tr id="<%= spree_dom_id supplier %>" data-hook="rate_row" class="<%= cycle('odd', 'even')%>">
        <td><%=supplier.name %></td>
        <td>
          <%=supplier.email %><br />
          <%=supplier.phone %><br />
          <%=supplier.website %>
        </td>
        <td class="actions">
          <%= link_to_edit supplier, :no_text => true %>
          <%= link_to_delete supplier, :no_text => true %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>